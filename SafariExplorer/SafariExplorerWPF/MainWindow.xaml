<Window x:Class="SafariExplorerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SafariExplorerWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
	<StackPanel>
		<Frame x:Name="_mainFrame"/>
		<Grid Height="720" Width="1280">
			<Grid.Background>
				<ImageBrush ImageSource="/BackGround_Savanna.jpg"/>
			</Grid.Background>

			<Button x:Name="BtnStartSafari" Content="Start Safari" HorizontalAlignment="Left" Margin="183,405,0,0" VerticalAlignment="Top" Height="95" Width="192" Click="BtnStartSafari_Click"/>
			<Button x:Name="BtnStartQuiz" Content="Start Quiz" HorizontalAlignment="Center" Margin="0,405,0,0" VerticalAlignment="Top" Height="95" Width="192" Click="BtnStartQuiz_Click"/>
			<Button x:Name="BtnJournal" Content="Open Journal" HorizontalAlignment="Left" Margin="903,405,0,0" VerticalAlignment="Top" Height="95" Width="192" Click="BtnClickOpenJournal"/>
		</Grid>
	</StackPanel>
</Window>
